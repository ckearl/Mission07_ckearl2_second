@{
    ViewData["Title"] = "Delete a Movie";
}

@model Movie

<div class="row">
    <h2>Deletion Confirmation</h2>
    <h3> Are you suer you wnat to delete the movie: @Model.Title?</h3>
</div>
<div class="row">
    <form method="post" asp-controller="Home" asp-action="DeleteMovie">
        <input type="hidden" asp-for="MovieID">
        <button class="button-primary" type="submit">Delete</button>
        <a class="button" asp-controller="Home" asp-action="MovieTable">Cancel</a>
    </form>
</div>

