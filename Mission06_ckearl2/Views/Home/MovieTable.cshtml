@{
    ViewData["Title"] = "Movies Table";
}

@model List<Movie>

<table class="table table-striped">
    <thead>
        <tr class="font-weight-bold">
            <th scope="col">Title</th>
            <th scope="col">Rating</th>
            <th scope="col">Edited</th>
            <th scope="col">Lent To</th>
            <th scope="col">Notes</th>
            <th scope="col">Category</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@item.Title</td>
                    <td>@item.Rating</td>
                    <td>@item.Edited</td>
                    <td>@item.LentTo</td>
                    <td>@item.Notes</td>
                    <td>@item.Category.CategoryName</td>
                    <td><a asp-controller="Home" asp-action="EditMovie" asp-route-movieid="@item.MovieID">Edit</a></td>
                    <td><a asp-controller="Home" asp-action="DeleteMovie"asp-route-movieid="@item.MovieID">Delete</a></td>
                </tr>
            }

    </tbody>
</table>

